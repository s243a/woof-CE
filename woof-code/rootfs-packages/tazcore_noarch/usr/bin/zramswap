#!/bin/sh

t1=$(awk -F":" '$1~/MemTotal/{print $2}' /proc/meminfo)
tlen=${#t1}
total=${t1:1:$tlen-3}
z1=$(($total/4))
zramsize="$z1"

start() {
  modprobe zram
  echo "zram size: $zramsize"
  echo $(($zramsize*1024)) | bc > /sys/block/zram0/disksize
  mkswap /dev/zram0
  swapon -p 50 /dev/zram0
  echo "zram started"
}

stop() {
  swapoff /dev/zram0
  echo "zram stopped"
}

case "$1" in
  start)
    start
  ;;

  stop)
    stop
  ;;

  restart)
	stop
    echo 1 > /sys/block/zram0/reset
	start
  ;;

  *)
  echo "Usage: $0 (start|stop|restart)"
esac
