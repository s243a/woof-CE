cd "$ROOT/usr/lib/i386-linux-gnu"
make_symlink(){
  if [ -e ../$1 ] && \
     [ ! -e $1 ]; then
     ln -s ../$1 $1
  fi
}
make_symlink gdk-pixbuf-2.0