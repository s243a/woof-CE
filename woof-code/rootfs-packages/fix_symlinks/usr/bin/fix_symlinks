make_symlink(){
  if [ -e ../$1 ] && \
     [ ! -e $1 ]; then
     ln -s ../$1 $1
  fi
}
cd "$ROOT/usr/lib/i386-linux-gnu"
while read a_dir in ; do
  make_symlink "$a_dir"
done <<EOM
avahi
awk
coreutils
dbus-1.0
dconf
engines-1.1
